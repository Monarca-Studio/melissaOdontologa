---
import { Image } from "astro:assets";
import logo_mo from "~/assets/logo_mo.png";
const whatsappLink = "https://wa.me/+573194498266"; // Cambia este número por tu número de WhatsApp
const courseLink = "/curso-tecnica-mo"; // Ruta para la landing page
const { generator, site } = Astro;
const image = new URL("logo_mo.png", site);
import bg_tecnica_mo from "~/assets/melissa_2.jpeg";
import whatsapp_bg from "~/assets/grupal.jpeg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo_mo.png" type="image/png" />
    <meta name="description" content="Página principal para agendar citas y acceder al curso de Técnica MO." />
    <title>Página Principal | Técnica MO</title>

    <!-- Meta etiquetas SEO -->
    <meta property="og:title" content="Página Principal | Técnica MO" />
    <meta property="og:description" content="Accede al curso Técnica MO o agenda una cita con la Dra. Melissa." />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={courseLink} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Página Principal | Técnica MO" />
    <meta name="twitter:description" content="Accede al curso Técnica MO o agenda una cita con la Dra. Melissa." />
    <meta name="twitter:image" content={image} />
  </head>
  <body class="bg-gray-800 h-screen flex flex-col items-center justify-center text-white">
    <section class="flex flex-col items-center justify-center min-h-screen bg-gray-800">
      <div class="text-center">
        <!-- Logo grande centrado -->
        <img src="/logo_mo.png" alt="Logo MO Cursos" class="w-32 md:w-64 mx-auto mb-8" />
      </div>
    
      <!-- Botones alineados al centro en desktop y mobile -->
      <div class="flex flex-col items-center space-y-4 mt-8">
        <a
          href="/curso-tecnica-mo"
          class="text-white w-full text-center rounded-lg text-lg md:text-xl hover:scale-105 transition-transform bg-gradient-to-r from-orange-400 to-orange-600  py-10 px-8 hover:from-orange-500 hover:to-orange-700 transform"
        >
          Ir al Curso Técnica MO
        </a>
        <a
          href="https://wa.me/573016154557"
          target="_blank"
          class="w-full text-white rounded-lg text-lg md:text-xl hover:scale-105 transition-transform bg-gradient-to-r from-green-500 to-green-700  py-10 px-8 hover:from-green-600 hover:to-green-800 transform"
        >
          Agendar una Cita por WhatsApp
        </a>
      </div>
    </section>
  </body>
</html>
