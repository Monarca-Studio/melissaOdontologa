---
import { Image } from "astro:assets";
import logo_mo from "~/assets/logo_mo.png";
import button1 from "~/assets/Boton-1.png";
import button2 from "~/assets/Boton-2.png";
import button3 from "~/assets/Boton-3.png";
const whatsappLink = "https://wa.me/+573194498266";
const courseLink = "/curso-tecnica-mo"; 
const cursoPresencialMessage = "Hola deseo solicitar información sobre el curso: 1. Carillas en resina indirecta y cerámica técnica MO  2. ⁠Restauraciones Impresas 3D";
const citaMessage = "¡Hola! deseo solicitar una cita de valoración / información.";
const { generator, site } = Astro;
const image = new URL("logo_mo.png", site);
import bg_tecnica_mo from "~/assets/melissa_2.jpeg";
import whatsapp_bg from "~/assets/grupal.jpeg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo_mo.png" type="image/png" />
    <meta name="description" content="Página principal para agendar citas y acceder al curso de Técnica MO." />
    <title>Página Principal | Técnica MO</title>

    <meta property="og:title" content="Página Principal | Técnica MO" />
    <meta property="og:description" content="Accede al curso Técnica MO o agenda una cita con la Dra. Melissa." />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={courseLink} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Página Principal | Técnica MO" />
    <meta name="twitter:description" content="Accede al curso Técnica MO o agenda una cita con la Dra. Melissa." />
    <meta name="twitter:image" content={image} />
  </head>
  <body class="bg-[#102434] h-screen flex flex-col items-center justify-center text-white">
    <section class="flex flex-col items-center justify-center min-h-screen bg-[#102434]">
      <div class="text-center font-bold text-2xl text-">
        <!-- <img src="/logo_mo.png" alt="Logo MO Cursos" class="w-32 md:w-64 mx-auto mb-8" /> -->
         <h1>MELISSA</h1>
         <h1>ODONTÓLOGA</h1>
      </div>
    
      <div class="flex flex-col items-center space-y-4 mt-8">
        <a 
          href={`${whatsappLink}?text=${cursoPresencialMessage}`} 
          target="_blank"
          class="w-full max-w-sm mx-auto text-center rounded-lg text-lg md:text-xl hover:scale-105 transition-transform transform"
        >
          <img src={button1.src} alt="Ir al Curso Técnica MO Presencial" class="w-full h-auto" />
        </a>
        <a href="/curso-tecnica-mo" class="w-full max-w-sm mx-auto text-center rounded-lg text-lg md:text-xl hover:scale-105 transition-transform transform">
          <img src={button2.src} alt="Ir al Curso Técnica MO Online" class="w-full h-auto" />
        </a>
        <a 
          href={`${whatsappLink}?text=${citaMessage}`}
          target="_blank" 
          class="w-full max-w-sm mx-auto text-center rounded-lg text-lg md:text-xl hover:scale-105 transition-transform transform"
        >
          <img src={button3.src} alt="Ir a Agendar Cita" class="w-full h-auto" />
        </a>
      </div>

      <div class="text-center">
        <img src="/logo_mo.png" alt="Logo MO Cursos" class="w-16 md:w-24 mx-auto mb-8" />
      </div>
    </section>
  </body>
</html>
