<section class="py-0 px-6">
  <h2 class="text-navy text-center font-extrabold text-2xl mb-10">Módulos del Curso</h2>

  <div class="divide-y divide-gray-200 px-1 md:px-40">
    {modules.map(({ number, title, description }, index) => (
      <details class="group py-6">
        <summary class="flex items-center justify-between cursor-pointer">
          <div class="flex items-center">
            <div class="bg-grey-200 text-gold font-bold text-base w-12 h-12 rounded-full flex items-center justify-center mr-4">
              {number}
            </div>
            <h3 class="text-navy hover:text-gold  font-semibold text-base w-full">
              {title}
            </h3>
          </div>
          <div class="flex items-center justify-center w-12 h-12">
